<% if @vehicle.errors.any? %>
  <% @vehicle.errors.full_messages.each do |msg| %>
    <%= msg %>
  <%end%>
<%end%>

<%= form_for @vehicle do |f| %>
  <%= f.label :color, "Color" %>
  <%= f.text_field :color %>

  <%= f.label :year, "Year" %>
  <%= f.text_field :year %>

  <%= f.label :mileage, "Mileage" %>
  <%= f.text_field :mileage %>

  <%= f.label :manufacturer_id%>
  <%= f.collection_select(:manufacturer_id, Manufacturer.all, :id, :name, include_blank: true) %>

  <%= f.label :description, "Description" %>
  <%= f.text_area :description %>

  <%= f.submit "Submit" %>

<% end %>
